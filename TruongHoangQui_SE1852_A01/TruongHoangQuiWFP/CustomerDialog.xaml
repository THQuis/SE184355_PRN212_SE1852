<Window x:Class="TruongHoangQuiWFP.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TruongHoangQuiWFP"
        mc:Ignorable="d"
        Title="Thông tin khách hàng" Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="Height">
    <StackPanel Margin="20">
        <TextBlock Text="Tên công ty:"/>
        <TextBox x:Name="txtCompanyName" Width="250"/>
        <TextBlock Text="Tên liên hệ:" Margin="0,8,0,0"/>
        <TextBox x:Name="txtContactName" Width="250"/>
        <TextBlock Text="Số điện thoại:" Margin="0,8,0,0"/>
        <TextBox x:Name="txtPhone" Width="250"/>
        <TextBlock Text="Password:" Margin="0,8,0,0"/>
        <PasswordBox x:Name="txtPassword" Width="250"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Lưu" Width="70" Margin="0,0,8,0" Click="BtnSave_Click"/>
            <Button Content="Hủy" Width="70" Click="BtnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>